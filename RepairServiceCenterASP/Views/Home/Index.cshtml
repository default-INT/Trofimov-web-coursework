@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/page1.png" alt="ASP.NET" class="img-responsive" style="he" />
            <div class="carousel-caption" role="option">
                <p>
                    Сервис по ремонту оборудования
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                       Показать больше
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/page2.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Отдел кадров
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                        Показать больше
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/page3.png" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Список всех заказов
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525027&clcid=0x409">
                        Показать больше
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Предыдущая</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Следующая</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>При разработке использовались</h2>
        <ul>
            <li>ASP.NET Core MVC</li>
            <li>Стили <a href="https://go.microsoft.com/fwlink/?LinkID=398939">Bootstrap</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Сервисы</h2>
        <ul>
            <li><a asp-area="" asp-controller="Orders">Список заказов</a></li>
            <li><a asp-area="" asp-controller="SpareParts">Список запчастей</a></li>
            <li><a asp-area="" asp-controller="TypesOfFaults">Типы повреждений</a></li>
            <li><a asp-area="" asp-controller="RepairedModels">Ремонтируемые модели</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Отдел кадров</h2>
        <ul>
            <li><a asp-area="" asp-controller="Employees">Список сотрудников</a></li>
            <li><a asp-area="" asp-controller="Posts">Список должностей</a></li>
        </ul>
    </div>
    <!--
        копии col-b-3
    -->
</div>
