@model IEnumerable<RepairServiceCenterASP.Models.Post>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Должности сотрудников</h2>

<p>
    <a asp-action="Create">Добавить новую должность</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Money)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Money)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PostId">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.PostId">Подробности</a> |
                <a asp-action="Delete" asp-route-id="@item.PostId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
