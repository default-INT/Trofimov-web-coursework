@model RepairServiceCenterASP.Models.TypeOfFault

@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Редактирование</title>
</head>
<body>
    <h2>Редактирование</h2>
    <div>
        <h4>Вид неисправности @Model.Name</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="TypeOfFaultId" />
                    <div class="form-group">
                        <label asp-for="RepairedModelId" class="control-label"></label>
                        <select asp-for="RepairedModelId" class="form-control" asp-items="ViewBag.RepairedModelId"></select>
                        <span asp-validation-for="RepairedModelId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MethodRepair" class="control-label"></label>
                        <input asp-for="MethodRepair" class="form-control" />
                        <span asp-validation-for="MethodRepair" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WorkPrice" class="control-label"></label>
                        <input asp-for="WorkPrice" class="form-control" />
                        <span asp-validation-for="WorkPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Сохранить" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Вернуться назад</a>
        </div>
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
