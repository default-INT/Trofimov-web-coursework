@model RepairServiceCenterASP.ViewModels.OrdersViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Заказы</h2>

<p>
    <a asp-action="Create">Добавить новый заказ</a>
</p>
<form method="get">
    <div class="form-inline">
        <label class="control-label">Дата заказа: </label>
        <input name="dateOrder" class="form-control" type="date" value="@Model.OrdersFilter.SelectedDateOrder" />

        <label class="control-label">Имя заказчика: </label>
        @Html.TextBox("fullNameCust", Model.OrdersFilter.InputFullNameCust, htmlAttributes: new { @class = "form-control" })

        <label class="control-label">Сотрудник: </label>
        @Html.DropDownList("employee", Model.OrdersFilter.Employees as SelectList,
                htmlAttributes: new { @class = "form-control" })

        <label class="control-label">Гарантия: </label>
        @Html.CheckBox("guarantee", false, htmlAttributes: new { @class = "form-control"})

        <input type="submit" value="Фильтр" class="btn btn-default" />
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@Model.OrdersSort.DateOrderSort"
                   asp-route-dateOrder="@Model.OrdersFilter.SelectedDateOrder"
                   asp-route-fullNameCust="@Model.OrdersFilter.InputFullNameCust"
                   asp-route-employee="@Model.OrdersFilter.SelectedEmployee"
                   asp-route-guarantee="@Model.OrdersFilter.SelectedGuarantee">
                    @Html.DisplayNameFor(model => model.Orders.FirstOrDefault().DateOrder)
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@Model.OrdersSort.ReturnDateSort"
                   asp-route-dateOrder="@Model.OrdersFilter.SelectedDateOrder"
                   asp-route-fullNameCust="@Model.OrdersFilter.InputFullNameCust"
                   asp-route-employee="@Model.OrdersFilter.SelectedEmployee"
                   asp-route-guarantee="@Model.OrdersFilter.SelectedGuarantee">
                    @Html.DisplayNameFor(model => model.Orders.FirstOrDefault().ReturnDate)
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@Model.OrdersSort.FullNameCustSort"
                   asp-route-dateOrder="@Model.OrdersFilter.SelectedDateOrder"
                   asp-route-fullNameCust="@Model.OrdersFilter.InputFullNameCust"
                   asp-route-employee="@Model.OrdersFilter.SelectedEmployee"
                   asp-route-guarantee="@Model.OrdersFilter.SelectedGuarantee">
                    @Html.DisplayNameFor(model => model.Orders.FirstOrDefault().FullNameCustumer)
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@Model.OrdersSort.GuaranteeMarkSort"
                   asp-route-dateOrder="@Model.OrdersFilter.SelectedDateOrder"
                   asp-route-fullNameCust="@Model.OrdersFilter.InputFullNameCust"
                   asp-route-employee="@Model.OrdersFilter.SelectedEmployee"
                   asp-route-guarantee="@Model.OrdersFilter.SelectedGuarantee">
                    @Html.DisplayNameFor(model => model.Orders.FirstOrDefault().GuaranteeMark)
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@Model.OrdersSort.GuaranteePeriodSort"
                   asp-route-dateOrder="@Model.OrdersFilter.SelectedDateOrder"
                   asp-route-fullNameCust="@Model.OrdersFilter.InputFullNameCust"
                   asp-route-employee="@Model.OrdersFilter.SelectedEmployee"
                   asp-route-guarantee="@Model.OrdersFilter.SelectedGuarantee">
                    @Html.DisplayNameFor(model => model.Orders.FirstOrDefault().GuaranteePeriod)
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@Model.OrdersSort.PriceSort"
                   asp-route-dateOrder="@Model.OrdersFilter.SelectedDateOrder"
                   asp-route-fullNameCust="@Model.OrdersFilter.InputFullNameCust"
                   asp-route-employee="@Model.OrdersFilter.SelectedEmployee"
                   asp-route-guarantee="@Model.OrdersFilter.SelectedGuarantee">
                    @Html.DisplayNameFor(model => model.Orders.FirstOrDefault().Price)
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@Model.OrdersSort.RepModelSort"
                   asp-route-dateOrder="@Model.OrdersFilter.SelectedDateOrder"
                   asp-route-fullNameCust="@Model.OrdersFilter.InputFullNameCust"
                   asp-route-employee="@Model.OrdersFilter.SelectedEmployee"
                   asp-route-guarantee="@Model.OrdersFilter.SelectedGuarantee">
                    Ремонтируемое оборудывание
                </a>
</th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@Model.OrdersSort.TypeOfFaultSort"
                   asp-route-dateOrder="@Model.OrdersFilter.SelectedDateOrder"
                   asp-route-fullNameCust="@Model.OrdersFilter.InputFullNameCust"
                   asp-route-employee="@Model.OrdersFilter.SelectedEmployee"
                   asp-route-guarantee="@Model.OrdersFilter.SelectedGuarantee">
                    @Html.DisplayNameFor(model => model.Orders.FirstOrDefault().TypeOfFault)
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@Model.OrdersSort.ServicedStoreSort"
                   asp-route-dateOrder="@Model.OrdersFilter.SelectedDateOrder"
                   asp-route-fullNameCust="@Model.OrdersFilter.InputFullNameCust"
                   asp-route-employee="@Model.OrdersFilter.SelectedEmployee"
                   asp-route-guarantee="@Model.OrdersFilter.SelectedGuarantee">
                    @Html.DisplayNameFor(model => model.Orders.FirstOrDefault().ServicedStore)
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@Model.OrdersSort.EmployeeSort"
                   asp-route-dateOrder="@Model.OrdersFilter.SelectedDateOrder"
                   asp-route-fullNameCust="@Model.OrdersFilter.InputFullNameCust"
                   asp-route-employee="@Model.OrdersFilter.SelectedEmployee"
                   asp-route-guarantee="@Model.OrdersFilter.SelectedGuarantee">
                    Сотрудник
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Orders)
        {
            <tr>
                <td>
                    @item.DateOrder.ToShortDateString()
                </td>
                <td>
                    @item.DateOrder.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullNameCustumer)
                </td>
                <td>
                    @if ((bool)item.GuaranteeMark)
                    {
                        <span>Имеется</span>
                    }
                    else
                    {
                        <span>Отсутствует</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GuaranteePeriod)
                </td>
                <td>
                    @Math.Round(item.Price, 2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RepairedModel.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeOfFault.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServicedStore.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.FullName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OrderId">Ред.</a><br>
                    <a asp-action="Details" asp-route-id="@item.OrderId">Детали</a><br>
                    <a asp-action="Delete" asp-route-id="@item.OrderId">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.PageViewModel.HasPreviousPage)
{
    <a asp-action="Index"
       asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
       class="btn btn-default btn">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Назад
    </a>
}
@if (Model.PageViewModel.HasNextPage)
{
    <a asp-action="Index"
       asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
       class="btn btn-default btn">
        Вперед
        <i class="glyphicon glyphicon-chevron-right"></i>
    </a>
}